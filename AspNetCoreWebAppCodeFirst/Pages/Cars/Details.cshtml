@page
@model AspNetCoreWebAppCodeFirst.Pages.Cars.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details about @Model.RegNo</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Model
        </dt>
        <dd class="col-sm-10">
            @Model.Model
        </dd>
        <dt class="col-sm-2">
            Manufacturer
        </dt>
        <dd class="col-sm-10">
            @Model.Manufacturer
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Year
        </dt>
        <dd class="col-sm-10">
            @Model.Year
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-carId="@Model.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
