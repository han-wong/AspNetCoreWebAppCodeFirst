@page
@model AspNetCoreWebAppCodeFirst.Pages.Cars.IndexModel
@{
    ViewData["Title"] = "Cars";
}

<h1>@Model.ViewData["Title"]</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                RegNo
            </th>
            <th scope="col">
                Model
            </th>
            <th scope="col">
                Manufacturer
            </th>
            <th scope="col">
                Price
            </th>
            <th scope="col">
                Year
            </th>
            <th scope="col">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <th scope="row">@car.RegNo</th>
                <td>@car.Model</td>
                <td>@car.ManufacturerName</td>
                <td>@car.Price</td>
                <td>@car.Year</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@car.Id" class="btn btn-primary">Edit</a>
                    <a asp-page="./Details" asp-route-id="@car.Id" class="btn btn-primary">Details</a>
                    <a asp-page="./Delete" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
